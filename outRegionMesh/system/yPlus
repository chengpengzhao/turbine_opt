Description
    Calculates y+

\*---------------------------------------------------------------------------*/

yPlus
{
    type            yPlus;
    libs            ("libfieldFunctionObjects.so");

    executeControl  writeTime;
    writeControl    writeTime;

    patches         (airfoil-l1 airfoil-l2 airfoil-h1 airfoil-h2);
    binData
        {
            nBin        21;
            direction   (1 0 0);
            cumulative  yes;
        }
}
